<div id="layout-<%=@mega_layout.name.gsub(' ', '-').downcase.dasherize %>" class="container left-column-template layout-template">
  <div class="row">
    <%= layout_settings_header(@layout_helper) %>
    <% if @mega_layout_sections['full_top'].present? %>
      <div class='layout-section layout-section--full-top col-12'><%= @mega_layout_sections['full_top'][0]%></div>
    <% end %>
    <% if @mega_layout_sections['left_column'].present? %>
      <div class='layout-section layout-section--left col-3'><%= @mega_layout_sections['left_column'][0]%></div>
    <% end %>
    <% if @mega_layout_sections['main'].present? %>
      <div class='layout-section layout-section--main col-9'><%= @mega_layout_sections['main'][0]%></div>
    <% end %>
    <% if @mega_layout_sections['full_end'].present? %>
      <div class='layout-section layout-section--full-end col-12'><%= @mega_layout_sections['full_end'][0]%></div>
    <% end %>
    <% if !defined?(administering_page?).nil? && administering_page? %>
      <div class='links col-12 layout-help-link'><%= render partial: 'mega_bar_help_links', :locals => {:links => layout_help_links} %></div>
    <% end %>
  </div>
</div>
