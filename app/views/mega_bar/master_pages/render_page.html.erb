<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

    <%= csrf_meta_tags %>
  </head>
  <body class='<%= @page_class %>'>
    <nav style='background-color: #eeeeee'>
      <%= link_to 'Home', '/' %> | 
      <%= link_to 'My Pages', mega_bar.pages_path %> |  
      <%= link_to 'My Models', mega_bar.models_path %> |
      <% if user_signed_in? %>
        <%#= link_to('Logout', destroy_session_path, method: :delete) %> | 
        <%#= link_to('Edit registration', edit_registration_path) %>
      <% else %>
        <%#= link_to('Login', new_session_path)  %> |
        <%# = link_to('Register', new_registration_path)  %>
      <% end %>
    </nav>
    <%# = image_tag "music-warehouse.jpeg" %>

    <% flash.each do |key, msg| %>
      <div id="<%= key %>">
        <p><%= msg %></p>
        <div class="clear"></div>
      </div>
    <% end %>

    <% @page_layouts.each do |layout| %>
      <%=layout%>
    <% end %>

    <%= render partial: 'mega_bar_help_links' ,:locals => {:links => page_help_links} %>
    <nav  style='background-color: #eeeeee'>
  <%= link_to 'MegaBar Pages', '/mega-bar/pages/all' %> |  <%= link_to 'MegaBar Models', '/mega-bar/models/all' %>
<div class='admin_links'>To replace this global template, create a file at myapp/app/views/mega_bar/master_pages/render_page.html.erb that contains at least this: <span>< % @page_layouts.each{ |layout| puts "&lt;div class='layout'&gt;#{layout}&lt;/div&gt;"  } % ></span></div>
    </nav>
  </body>
</html>
