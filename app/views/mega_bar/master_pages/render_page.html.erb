<!DOCTYPE html>
<html>
  <head>
    <title>MEGA BAR yo</title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
 
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <%= link_to 'Home', '/' %> | <%= link_to 'My Pages', mega_bar.pages_path %> |  <%= link_to 'My Models', mega_bar.models_path %>
    </nav>

    <% flash.each do |key, msg| %>
      <div id="<%= key %>">
        <p><%= msg %></p>
        <div class="clear"></div>
      </div>
    <% end %>

    <% @page_layouts.each do |layout| %>
      <div class='layout'><%=layout%></div>
    <% end %>
    <%= render partial: 'mega_bar_help_links' ,:locals => {:links => page_help_links} %>
  <%= link_to 'MegaBar Pages', '/mega-bar/pages/all' %> |  <%= link_to 'MegaBar Models', '/mega-bar/models/all' %>
<div class='admin_links'>To replace this global template, create a file at myapp/app/views/mega_bar/master_pages/render_page.html.erb that contains at least this: <pre style='margin:0'>< % @page_layouts.each{ |layout| puts "&lt;div class='layout'&gt;#{layout}&lt;/div&gt;"  } % ></pre></div>
    
  </body>
</html>
